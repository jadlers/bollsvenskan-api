{
  "name": "Bollsvenskan-API",
  "version": "0.0.1",
  "type": "module",
  "description": "Express server API for Bollsvenskan",
  "author": "Jacob Adlers",
  "license": "MIT",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "start": "node build/server.js",
    "dev": "concurrently --prefix \"[{name}]\" --names \"Rollup,Node\" --prefix-colors \"yellow.bold,cyan.bold\" yarn:watch-rollup yarn:watch-node",
    "watch-node": "NODE_ENV=development nodemon --watch build build/server.js",
    "watch-rollup": "rollup --config rollup.config.js --watch",
    "fmt:check": "prettier --check src/*.js",
    "fmt:run": "prettier --write src/*.js",
    "test": "jest"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "fs": "^0.0.1-security",
    "http": "^0.0.1-security",
    "https": "^1.0.0",
    "nextcloud-link": "^1.2.3",
    "pg-promise": "^10.5.2",
    "prom-client": "^12.0.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.2",
    "@types/jest": "^26.0.0",
    "@types/socket.io": "^2.1.8",
    "concurrently": "^5.2.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "rollup": "^2.18.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "prettier": {
    "singleQuote": false
  }
}
