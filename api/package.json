{
  "name": "Bollsvenskan-API",
  "version": "0.0.1",
  "type": "module",
  "description": "Express server API for Bollsvenskan",
  "author": "Jacob Adlers",
  "license": "MIT",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "start": "node --require dotenv/config build/server.js",
    "dev": "concurrently --prefix \"[{name}]\" --names \"Rollup,Node\" --prefix-colors \"yellow.bold,cyan.bold\" yarn:watch-rollup yarn:watch-node",
    "watch-node": "NODE_ENV=development nodemon --require dotenv/config --watch build build/server.js",
    "watch-rollup": "rollup --config rollup.config.js --watch",
    "fmt:check": "prettier --check src/*.js",
    "fmt:run": "prettier --write src/*.js",
    "test": "jest"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/hapi__joi": "^17.1.2",
    "@types/jest": "^27.0.2",
    "@types/node-fetch": "^3.0.3",
    "@types/socket.io": "^3.0.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "fs": "^0.0.1-security",
    "http": "^0.0.1-security",
    "https": "^1.0.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.0.0",
    "on-finished": "^2.3.0",
    "pg-promise": "^10.11.1",
    "prom-client": "^14.0.0",
    "rollup": "^2.58.0",
    "rollup-plugin-typescript2": "^0.31.1",
    "socket.io": "^4.3.1",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "prettier": "^2.0.2",
    "ts-jest": "^27.0.7"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "prettier": {
    "singleQuote": false
  }
}
