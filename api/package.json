{
  "name": "Bollsvenskan-API",
  "version": "0.0.1",
  "type": "module",
  "description": "Express server API for Bollsvenskan",
  "author": "Jacob Adlers",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node build/server.js",
    "dev": "concurrently --prefix \"[{name}]\" --names \"TypeScript,Node\" \"yarn watch-ts\" \"yarn watch-node\"",
    "watch-node": "NODE_ENV=development nodemon --watch build --verbose build/server.js",
    "watch-ts": "tsc --pretty --watch",
    "fmt:check": "prettier --check src/*.js",
    "fmt:run": "prettier --write src/*.js"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "fs": "^0.0.1-security",
    "http": "^0.0.1-security",
    "https": "^1.0.0",
    "pg-promise": "^10.5.2",
    "prom-client": "^12.0.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.2",
    "@types/socket.io": "^2.1.8",
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "typescript": "^3.9.5"
  }
}
